font-sans = 'Fira Sans', 'Avenir', Helvetica, Arial, sans-serif
font-mono = 'Fira Mono', 'Courier New', Courier, monospace
font-small = .85em

html, body
  background #0a0a0a
  color #ddd
  font-family font-sans
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  margin 0
  padding 0
  overflow-x hidden

#app
  display inline-block
  min-height 100vh
  width 100vw
  background-image url('@/assets/background.png')
  background-position center bottom
  background-size contain
  background-repeat no-repeat

// positions and margin
.mt-1
  margin-top .5em
.mt-3
  margin-top 1.5em
.ml-1
  margin-left .5em
.mb-1
  margin-bottom .5em
.mr-1
  margin-right .5em
.mt-2
  margin-top 1em
.ml-2
  margin-left 1em
.mb-2
  margin-bottom 1em
.mr-2
  margin-right 1em

// display
.hide-sm
  @media (max-width 640px)
    display none
.center-sm
  @media (max-width 640px)
    text-align center
.block-sm
  @media (max-width 640px)
    display block

// headings
h1, h2, h3
  font-weight normal
  letter-spacing 2px
  text-transform uppercase
h1
  margin-top 1em
  text-align center

// text
.text-unimportant
  color #777
.text-small
  font-size font-small
.text-mono
  font-family font-mono

// links
a, a:active, a:visited
  color inherit
a:hover, a:focus
  color: #008ba3

// cursor
.c-hand
  cursor pointer

// animations
@keyframes hover
  0%
    transform translateY(0)
  100%
    transform translateY(-15px)
@keyframes wink
  48%
    opacity 1
  50%
    opacity 0
  52%
    opacity 1

// tags
.tag
  background #222
  font-size .8em
  font-family 'Fira Mono', 'monospace'
  padding .15em .3em
  border-radius .3em

// navigation menu
#nav
  background #000
  padding 15px 0
  text-align center

  a
    display inline-block
    vertical-align: middle;
    margin 0 10px
    height 30px
    line-height 30px
    font-weight bold
    text-decoration none
    color #666666
    &.router-link-exact-active
      color #008ba3

    .logo
      height 30px

.container
  margin 0 auto
  padding-bottom 22vw

  // sm
  @media (max-width 640px)
    width calc(100% - 20px)
    padding 0 10px
  // md
  @media (min-width 641px) and (max-width 960px)
    width 640px
  // lg
  @media (min-width 961px) and (max-width 1280px)
    width 960px
  // xl
  @media (min-width 1281px)
    width 1280px

  &.container-sm
    @media (max-width 640px)
      width 100%
    @media (min-width 641px)
      width 640px

  .feature
    text-align center
    background-size cover
    background-position center
    @media (max-width 640px)
      height auto
    @media (min-width 641px)
      height 405px

    .thumb
      margin 0 auto

      @media (max-width 640px)
        width 100vw
        margin-left -10px
      @media (min-width 641px)
        height 360px
        width 640px

      img
        display block
        width inherit
        height inherit

    iframe
      display block
      margin 0 auto

      @media (max-width 640px)
        width 100vw
        height 56.25vw
        margin-left -10px
      @media (min-width 641px)
        height 360px
        width 640px

    .description
      height 1.4em
      padding .5em 0
      background #000
      font-size 1.2em
      letter-spacing 2px
      text-transform uppercase

      @media (max-width 640px)
        width 100vw
        margin-left -10px

    &>span
      display inline-block
      text-transform uppercase
      font-size 2.3em
      font-weight bold
      letter-spacing 5px
      margin-top 30px
      color #555

      .feature-logo
        width 240px
        display: block
        margin 0 auto 10px auto
        .st1, .st2
          transition .5s fill ease-in-out
        .st1
          fill #1a1a1a
        .st2
          fill #555

  &:hover span .feature-logo
    .st1
      fill #008BA3
    .st2
      fill #fff
    .heart
      animation: hover .75s infinite alternate
    .eye
      animation: wink 4s infinite

  .list
    display: flex;
    justify-content: start
    flex-wrap: nowrap
    align-items: center
    gap: 5px;
    overflow-x: scroll

  .grid
    display: flex;
    flex-wrap: wrap;
    justify-content: start;
    gap: 5px;

  .element
    position: relative
    
    img
      display block
      cursor pointer
      border 5px solid transparent
      box-sizing border-box
      transition .15s border ease-in-out

    &.active img
      border 5px solid #fff
    &:not(.active) img:hover
      border 5px solid #999
    
    &[data-duration]::after
      content attr(data-duration)
      background rgba(0,0,0,.6)
      color white
      position absolute
      bottom 6px
      right 6px
      font-family font-mono
      font-size font-small
      padding 1px 3px
  
  .series .element img
    width 230px
  .episodes .element img
    width 170px
